<div class="row">
  <div class="onecol">
  </div>
  <div class="tencol">
    <table>
  <tr class="tableTitle">
    <td>Event Info</td>
  </tr>
</table>

<table>
    <thead><th><%= "#{@event.name}" %></th></thead>
    <tr><td><%= @event.date.strftime("%m/%d/%y") %></td></tr>
    <tr><td><%= @event.description %></td></tr>
    <tr><td><%= link_to "Download", @event.document_url %></td></tr>
    
</table>

<table>
  <tr class="tableTitle">
    <td>Attendance - Present: <%= @present_events %> / Late: <%= @late_events %> / Absent: <%= @absent_events %></td>
  </tr>
</table>

<table>
  <thead>
    <th>Name</th>
    <th>Present?</th>
  	<th>Late?</th>
  </thead>

  <% @attendance.each do |attendance| %>
    <tr>
      <td><%= link_to attendance.user.proper_name, user_path(attendance.user) %></td>
      <td class="<%= "#{(attendance.present)? 'green' : 'red'}" %>"></td>
      <td class="<%= "#{(attendance.late)? 'orange' : ''}" %>"></td>

    </tr>
  <% end %>
</table>


<div class="actions">
<%= will_paginate @attendance, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
<%= link_to 'Edit', edit_event_path(@event), :class => 'btn' %>
<%= link_to 'Back', events_path, :class => 'btn' %>
</div>

  </div>
  <div class="onecol last">
  </div>
</div>
